<Window x:Class="DesktopApp.EditReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Reservation" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Start Date:" />
            <DatePicker x:Name="StartDatePicker" SelectedDate="{Binding StartDate}" />
            
            <Label Content="End Date:" />
            <DatePicker x:Name="EndDatePicker" SelectedDate="{Binding EndDate}" />

            <Label Content="Antall Sengeplasser:" />
            <TextBox x:Name="AntallSengeplasserTextBox" Text="{Binding AntallSengeplasser}" />

            <Button Content="Confirm" Click="ConfirmButton_Click" />
        </StackPanel>
    </Grid>
</Window>